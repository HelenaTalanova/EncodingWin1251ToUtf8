<Window x:Class="EncodingWin1251ToUtf8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncodingWin1251ToUtf8"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Button x:Name="ButtonOpen">Open</Button>
            <TextBlock x:Name="TextPath"/>
            <Button x:Name="ButtonEncode">Encode</Button>
            <TextBlock x:Name="TextFiles"/>
        </StackPanel>
    </Grid>
</Window>
